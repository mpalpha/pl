{{#each files}} {{#if this.children}}
<li class="dropdown">
  <a href="{{#contains this.name ../this.path}}
      {{#is pagename " index.html "}}
        {{relative ../../../../page.dest dest}}
      {{/is}}
      {{/contains}}" class="dropdown-toggle" data-toggle="dropdown">
    <div class="divider">
      {{titlecase this.name}} <i class="caret"></i>
    </div>
  </a>

  <ul class="dropdown-menu dropdown--cropped">
    {{#each children}}
    <li>
      <a href="./{{../../this.root}}{{this.path}}">{{titlecase this.name}}</a>
    </li>
    {{/each}}
  </ul>
</li>
{{/if}} {{/each}}